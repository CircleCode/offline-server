<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE bindings>
<bindings id="document-[FAMNAME]-Bindings"
    xmlns="http://www.mozilla.org/xbl"
    xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
    xmlns:xbl="http://www.mozilla.org/xbl">
    
    <binding id="document-[FAMNAME]-view">
        
        <content>
            <xul:vbox flex="1">
                <dcpDocument xbl:inherits="initid" mode="view">
              [viewContent]
                </dcpDocument>
            </xul:vbox>
        </content>
        
    </binding>
    
    <binding id="document-[FAMNAME]-edit">
        
        <content>
            <xul:vbox flex="1">
                <dcpDocument xbl:inherits="initid" mode="edit">
            [editContent]
                </dcpDocument>
            </xul:vbox>
        </content>
        
    </binding>
    
</bindings>